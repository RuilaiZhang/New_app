    <% flash.each do |name, msg| %>
        <div class="alert alert-<%= select_alert_subclass(name) %> alert-dismissable" role="alert">
            <button class="close" data-dismiss="alert">
                <small><sup>x</sup></small>
            </button>
            <%= content_tag(:div,msg) %>
        </div>
    <% end %>
