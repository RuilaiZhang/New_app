<table class="table table-striped table-bordered table-hover col-md-10 offset-md-1">
  <thead class="thead-dark">
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Difficulty</th>
      <th>Price</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.category.name %></td>
        <td><%= listing.title %></td>
        <td><%= listing.condition %></td>
        <td>$<%= listing.price/100 %></td>
        <td><%= listing.description %></td>
        <td>
          <% if listing.sold %>
          Sold
          <% else %>
          Available
          <% end %>
        </td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Course', new_listing_path, class: "btn btn-dark offset-md-1" %>


